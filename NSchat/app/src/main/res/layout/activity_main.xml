<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/todayns"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="26dp"
        android:fontFamily="@font/gompyo"
        android:text="오늘 금연에"
        android:textSize="45dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.517"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.095" />

    <Button
        android:id="@+id/successBtn"
        android:layout_width="110dp"
        android:layout_height="75dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="28dp"
        android:backgroundTint="#5CE85E"
        android:fontFamily="@font/gompyo"
        android:text="성공"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/todayns" />

    <Button
        android:id="@+id/failureBtn"
        android:layout_width="110dp"
        android:layout_height="75dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="68dp"
        android:backgroundTint="#F13939"
        android:fontFamily="@font/gompyo"
        android:text="실패"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.222" />

    <TextView
        android:id="@+id/checktext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/gompyo"
        android:text="깜박하시면 성공으로 체크해드릴게요!"
        app:layout_constraintStart_toStartOf="@+id/successBtn"
        app:layout_constraintTop_toBottomOf="@+id/successBtn" />

    <TextView
        android:id="@+id/nsgg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="6dp"
        android:fontFamily="@font/gompyo"
        android:text="금연기간"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/NStimeView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.145"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checktext" />

    <TextView
        android:id="@+id/NStimeView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="67dp"
        android:fontFamily="sans-serif-black"
        android:text="TextView"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/savemn"
        app:layout_constraintEnd_toEndOf="@+id/SaveMoneyView"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/SaveMoneyView"
        app:layout_constraintTop_toBottomOf="@+id/nsgg" />

    <TextView
        android:id="@+id/SaveMoneyView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="101dp"
        android:fontFamily="sans-serif-black"
        android:text="TextView"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/calBtn"
        app:layout_constraintStart_toStartOf="@+id/savemn"
        app:layout_constraintTop_toBottomOf="@+id/savemn" />

    <TextView
        android:id="@+id/savemn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="7dp"
        android:fontFamily="@font/gompyo"
        android:text="절약한 금액"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/SaveMoneyView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/NStimeView" />

    <ImageButton
        android:id="@+id/calBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="47dp"
        android:layout_marginBottom="76dp"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/chatBtn"
        app:layout_constraintStart_toEndOf="@+id/parkBtn"
        app:srcCompat="@drawable/calsize" />

    <ImageButton
        android:id="@+id/parkBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="68dp"
        android:layout_marginEnd="51dp"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="@+id/calBtn"
        app:layout_constraintEnd_toStartOf="@+id/calBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/parksize" />

    <ImageButton
        android:id="@+id/chatBtn"
        android:layout_width="60dp"
        android:layout_height="55dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="80dp"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/calBtn"
        app:srcCompat="@drawable/chaticon" />

</androidx.constraintlayout.widget.ConstraintLayout>